<%- include("./partials/header")%>
  <!--  -->
<div class="librarybg">
    <nav class="navbar navbar-expand-lg text-center">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">Book_Store_Library</a>
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/"
                            >Home</a
                        >
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/create">Create</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/readall">Library</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <!--  -->
    <div class="d-flex flex-wrap container p-5">
        <% books.forEach(function(book, index){ %>
            <div class=" card me-3 mb-3" style="width: 17rem">
                <img width="w-100" style="height: 160px; object-fit: cover; object-position: center;"
                    src="/images/<%= book.image %>" alt="">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= book.name%>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">
                        <%= book.author%>
                    </h6>
                    <p class="card-text">
                        <%= book.description%>
                    </p>
                    <a href="/delete/<%= book._id%>" class="card-link text-danger">Delete Book</a>
                    <a href="/update/<%= book._id%>" class="card-link">Update Book</a>
                </div>
            </div>
            <% }) %>
    </div>
</div>

    <!--  -->
    <%- include("./partials/footer")%>